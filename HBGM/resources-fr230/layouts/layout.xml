<layout id="WatchFace">
    <bitmap id="HbgmLogo" filename="../drawables/hbgm.png" x="center" y="center" />
    
    <label id="DateDayLabel" x="center" y="0" font="Gfx.FONT_TINY" justification="Gfx.TEXT_JUSTIFY_CENTER" color="Gfx.COLOR_WHITE" />
    <label id="DateLabel" x="center" y="15" font="Gfx.FONT_TINY" justification="Gfx.TEXT_JUSTIFY_CENTER" color="Gfx.COLOR_WHITE" />

    <label id="TimeLabel" x="center" y="center" font="Gfx.FONT_NUMBER_HOT" justification="Gfx.TEXT_JUSTIFY_CENTER" color="Gfx.COLOR_WHITE" />
    <label id="CountDownLabel" x="center" y="130" font="Gfx.FONT_LARGE" color="Gfx.COLOR_WHITE" justification="Gfx.TEXT_JUSTIFY_CENTER" />
    <label text="@Strings.days" x="center" y="155" font="Gfx.FONT_SMALL" color="Gfx.COLOR_WHITE" justification="Gfx.TEXT_JUSTIFY_CENTER" />
    
    <drawable id="battery" class="Battery">
        <param name="x">8</param>
        <param name="y">85</param>
        <param name="height">10</param>
        <param name="width">22</param>
    </drawable>
</layout>